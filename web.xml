<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="Web
App_ID" version="3.0">
  <display-name>FITSservlet</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <listener>
    <description>Configures logging for this application</description>
    <display-name>Logging Configuration</display-name>
    <listener-class>edu.harvard.hul.ois.fits.service.listeners.LoggingConfigurator</listener-class>
  </listener>
  <servlet>
    <servlet-name>FitsServlet</servlet-name>
    <servlet-class>edu.harvard.hul.ois.fits.service.servlets.FitsServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>FitsServlet</servlet-name>
    <url-pattern>/examine</url-pattern>
    <url-pattern>/version</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>CorsFilter</filter-name>
    <filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
    <init-param>
    <param-name>cors.allowed.origins</param-name>
    <param-value>*</param-value>
  </init-param>
</filter>
  <filter-mapping>
    <filter-name>CorsFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>